<h1 class="text-center">Profile</h1>

<div style="width: 600px; margin: 0 auto">
  <form action="" method="post" class="mb-4">
    <% if (msg.length) { %>
    <div class="alert alert-success"><%= msg %></div>
    <% } %>
    <div>
      <div class="d-flex mb-4">
        <label for="name" style="width: 70px">Name:</label>
        <div class="w-50">
          <input
            type="text"
            name="name"
            placeholder="Name..."
            value="<%=  user.name  %>"
            class="form-control"
          />
          <%- req.errors?.name ? `<span class="text-danger w-100"
            >${req.errors?.name}</span
          >`: '' %>
        </div>
      </div>
      <div class="d-flex mb-4">
        <label for="email" style="width: 70px">Email:</label>
        <div class="w-50">
          <input
            type="email"
            name="email"
            placeholder="Email..."
            value="<%=  user.email  %>"
            class="form-control"
          />
          <%- req.errors?.email ? `<span class="text-danger"
            >${req.errors?.email}</span
          >`: '' %>
        </div>
      </div>
    </div>

    <button class="btn btn-primary w-100">Change Information</button>
  </form>

  <div class="d-flex mb-4 justify-content-between">
    <div class="d-flex gap-2">
      <label for="password">Password:</label>
      <div class="w-50">
        <input
          type="password"
          name="password"
          placeholder="Password..."
          value="<%=  user.password  %>"
          class="w-100"
          disabled
        />
      </div>
    </div>
    <a class="btn btn-primary" href="/profile/change-password"
      >Change Password</a
    >
  </div>
</div>
